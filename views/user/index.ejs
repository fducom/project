	<h4> Фото завантажити на сервак (ссилка там де path брати без /assets/)</h4>
		<form id="uploadForm"
      enctype="multipart/form-data"
      action="/upload/upload"
      method="post" target="_blank">
	  
    <input type="file" id="userPhotoInput" name="userPhoto" />
	
            <button type="submit" class="btn btn-success">Завантажити</button>
			
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>
</ul>
	<h3>Адміністративна частина</h3>
	  <div class="table-responsive">

<div class="row">
        <div class="col-lg-12">
            <h3>Пошук</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <input type="search" id="search" value="" class="form-control" placeholder="Пошук по таблиці">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table" id="table">
                <thead>
                    <tr>
                  	<th>ID</th>
			<th>Ім'я</th>
			<th>Біо</th>
			<th>Email</th>
                    </tr>
                </thead>
                <tbody>
                  	<% _.each(users, function(user) { %>
		<tr data-id="<%= user.id %>" data-model="user">
			<% if (user.online) { %>
				<td><img src="/images/icon-online.png"></td>
			<% } else { %>
				<td> <img src="/images/icon-offline.png"></td>
			<% } %>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<% if (user.admin) { %>
				<td> <img src="/images/admin.png"></td>
			<% } else { %>
				<td> <img src="/images/pawn.png"></td>
			<% } %>	
			<td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Переглянути</a>
			<a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Редагувати</a></td>

			<td><form action="/user/destroy/<%= user.id %>" method="POST">
				<input type="hidden" name="_method" value="Видалити"/>
				<input type="submit" class="btn btn-sm btn-danger" value="Видалити"/>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form></td>
		</tr> 

		<% }) %>
                  
    
                </tbody>
            </table>
            <hr>
        </div>
    </div>
		
</div>
</div>



